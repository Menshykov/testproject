header
    box-shadow 0 0 3px 0 rgba(31,45,61,0.05), 0 2px 6px 0 rgba(31,45,61,0.07)
    nav
        height 60px
        display flex
        align-items center
        li
            a
                color $color-gray
                text-decoration none
                font-weight 600
                position relative

.dropdown
    &.closed
        .dropdown-menu
            display none
    .dropdown-toggle
        display flex
        height 18px
        &:after
            content ""
            display block
            position relative
            top 50%
            left 5px
            transform translateY(-50%)
            width 9px
            height 5px
            background url('../images/arrow.svg') no-repeat

.dropdown-menu
    padding: 20px 0
    position absolute
    z-index 1
    background #fff
    border 1px solid $color-gray
    border-top-color transparent
    border-radius 0 0 5px 5px
    li
        margin-top 10px
        &:first-child
            margin-top 0

.logo
    display flex
    img
        max-width 100%
.basket
    &:hover
        opacity .8

.menu
    display flex
    margin-left: -20px;
    &__link
        padding: 0 20px
        &:hover
            opacity .8
    > li
        margin-left 30px
        &:first-child
            margin-left 0
