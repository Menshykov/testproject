footer
    box-shadow 0px -1px 0px 0px $color-borders
    padding 40px 0
    font-size 16px
    
    .text-block
        line-height 24px
        color $color-gray

    .btn-default
        height 39px
        width 166px
        font-size 16px
        font-weight 600
        padding 2px 20px

    .no-gutters
        justify-content space-between

.footer-list
    padding 0 20px
    &__title
        margin-bottom 10px
        color $color-dark
        font-weight 700
    a
        text-decoration none
        color $color-gray
        line-height 30px
        &:hover
            opacity .8

.social-list
    display flex
    &__item
        margin-right 10px
        display flex
        justify-content center
        align-items center
        border-radius 21px
        height 42px
        width 42px
        border 3px solid $color-borders
        &:last-child
            margin-right 0

.copyrights
    color $color-gray
    font-size 16px