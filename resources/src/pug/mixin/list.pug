mixin listLinks
    li
        a(href="#" class="menu__link")= "Menu 1"
    li.dropdown.closed
        a(href="#" class="menu__link dropdown-toggle")= "Menu 2"
        ul.dropdown-menu
            for i in [{link: '#', text: 'Menu 1'}, {link: '#', text: 'Menu 2'}, {link: '#', text: 'Menu 3'}]
                li
                    a(href=i.link, class="menu__link")= i.text
    li
        a(href="#" class="menu__link")= "Menu 3"